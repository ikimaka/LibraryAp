<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="525.0" prefWidth="800.0" stylesheets="@../resources/dark-theme.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="listbook.BookListController">
   <children>
      <TableView fx:id="tableView" layoutX="25.0" layoutY="29.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columns>
          <TableColumn fx:id="titleCol" prefWidth="75.0" text="Title" />
          <TableColumn fx:id="idCol" prefWidth="75.0" text="Book ID" />
            <TableColumn fx:id="authorCol" prefWidth="75.0" text="Author" />
            <TableColumn fx:id="publisherCol" prefWidth="75.0" text="Publisher" />
            <TableColumn fx:id="availabiltyCol" prefWidth="75.0" text="Availibility" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <contextMenu>
            <ContextMenu styleClass="table-context">
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleRefresh" text="Refresh" />
                <MenuItem mnemonicParsing="false" onAction="#handleBookEditOption" text="Edit" />
                  <MenuItem mnemonicParsing="false" onAction="#handleBookDeleteOption" text="Delete" />
              </items>
            </ContextMenu>
         </contextMenu>
      </TableView>
   </children>
</AnchorPane>
