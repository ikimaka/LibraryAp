<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="550.0" prefWidth="800.0" stylesheets="@../resources/dark-theme.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="issuedlist.IssuedListController">
    <children>
        <TableView fx:id="tableView" layoutX="10.0" layoutY="10.0" prefHeight="550.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columns>
                <TableColumn fx:id="idCol" maxWidth="100.0" minWidth="60.0" prefWidth="60.0" text="SI No" />
                <TableColumn fx:id="bookIDCol" maxWidth="500.0" minWidth="60.0" prefWidth="100.0" text="Book ID" />
                <TableColumn fx:id="bookNameCol" minWidth="60.0" prefWidth="60.0" text="Book Name" />
                <TableColumn fx:id="holderNameCol" minWidth="60.0" prefWidth="75.0" text="Issued To" />
                <TableColumn fx:id="issueCol" minWidth="60.0" prefWidth="100.0" text="Date of Issue" />
                <TableColumn fx:id="daysCol" maxWidth="75.0" minWidth="50.0" prefWidth="75.0" text="Days" />
                <TableColumn fx:id="fineCol" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" text="Fine" />
            </columns>
            <contextMenu>
                <ContextMenu styleClass="table-context">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleRefresh" text="Refresh" />
                    </items>
                </ContextMenu>
            </contextMenu>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</AnchorPane>
